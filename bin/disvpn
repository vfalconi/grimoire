#!/bin/bash

# https://github.com/microsoft/WSL/issues/1350#issuecomment-844452775

echo "# generated by disvpn on $(date +"%Y-%m-%d %H:%M:%S")" | tr -d '\r' | sudo tee /etc/resolv.conf
echo "nameserver 8.8.8.8" | tr -d '\r' | sudo tee --append /etc/resolv.conf
echo "nameserver 8.8.4.4" | tr -d '\r' | sudo tee --append /etc/resolv.conf
