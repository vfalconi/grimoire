#!/bin/bash

# https://github.com/microsoft/WSL/issues/1350#issuecomment-844452775

powershell.exe -Command 'Get-NetAdapter -Name "MozillaVPN*" | Get-DnsClientServerAddress | Select -ExpandProperty ServerAddresses' | awk 'BEGIN { print "# Generated by vpn fix func on", strftime("%c"); print } { print "nameserver", $1 }' | tr -d '\r' | sudo tee /etc/resolv.conf

powershell.exe -File 'C:\\Users\\vince\\dev\\Scripts\\vpn.ps1'
